@model HarnyCardApplication.Dtos.LoginUserRequestModel

@* <div class="container">

</div> *@

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        .my-container {

            width: 40pc;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"] {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: none;
        }

        button[type="submit"] {
            padding: 10px;
            border-radius: 5px;
            border: none;
            background-color: #05c277;
            color: #fff;
            cursor: pointer;
        }

        button:hover {
            background-color: #587cb5;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="my-container">
        <h1>Login</h1>
        <form asp-action="Login">
            @if (@ViewBag.error != null)
            {
                <h4>@ViewBag.error</h4>
            }
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" id="username" name="Email" placeholder="Enter your Email Address" required>
            <label asp-for="Password">Password:</label>
            <input type="password" asp-for="Password" id="password" name="password" placeholder="Enter your password"
                required>
            <button type="submit" value="submit">Login</button>
        </form>
    </div>
</body>

</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}